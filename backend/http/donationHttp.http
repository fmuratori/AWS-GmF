### DONATION find with filters
POST http://localhost:3000/api/donation/find
accept: application/json 
content-type: application/json

{
    "filter": {
        "$and":[
            {
                "volunteerId":{
                    "$in":[
                    null
                    ],
                    "$exists":true
                }
            },
            {
                "status":{
                    "$ne":"selected"
                }
            },
            {
                "pickUpPeriod": {
                    "$elemMatch": {
                        "weekDay": "gio",
                        "period": "morning"
                    }
                }
            }
        ]
    }
   
}

