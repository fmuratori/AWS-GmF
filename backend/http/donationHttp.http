### DONATION get unread messages
POST http://localhost:3000/api/donation/find
accept: application/json 
content-type: application/json

{
    "filter": {
        "userId": "618d34246460d3f4899710c8",
        "chat": {
            "$elemMatch": {
                "visualized": false,
                "userId": { 
                    "$ne": "618d34246460d3f4899710c8" 
                }
            }
        }
    },

    "projection": {
        "donationId": 1,
        "chat.$": 1
    }
}

